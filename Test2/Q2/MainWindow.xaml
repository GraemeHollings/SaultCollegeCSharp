<Window x:Class="Q2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key = "myButtonStyle" TargetType = "Button">
            <Setter Property = "Height" Value = "30" />
            <Setter Property = "Width" Value = "80" />
            <Setter Property = "Foreground" Value = "Blue" />
            <Setter Property = "FontSize" Value = "12" />
            <Setter Property = "Margin" Value = "10" />
        </Style>
    </Window.Resources>


    <Grid>
        <Button Content="Button 1" HorizontalAlignment="Left" Margin="345,54,0,0" VerticalAlignment="Top" Width="75" Style = "{StaticResource myButtonStyle}"/>
        <Button Content="Button 2" HorizontalAlignment="Left" Margin="345,102,0,0" VerticalAlignment="Top" Width="75" Style = "{StaticResource myButtonStyle}"/>

    </Grid>
</Window>
